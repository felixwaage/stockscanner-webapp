 <mvc:View controllerName="com.myorg.stockscanner.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:ui="sap.ui.table"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl" >
    <pages>
      <Page title="{i18n>title}">
        <content>
          <ui:Table
            rows="{recommendations>/}"
            selectionMode="MultiToggle"
            visibleRowCount="14"
            ariaLabelledBy="title">
            <ui:columns>
              <ui:Column width="11rem">
                <Label text="Company" />
                <ui:template>
                  <Text text="{recommendations>symbol}" wrapping="false" />
                </ui:template>
              </ui:Column>
              <ui:Column width="11rem">
                <Label text="buy" />
                <ui:template>
                  <Text text="{recommendations>buy}" wrapping="false" />
                </ui:template>
              </ui:Column>
              <ui:Column width="11rem">
                <Label text="hold" />
                <ui:template>
                  <Text text="{recommendations>hold}" wrapping="false" />
                </ui:template>
              </ui:Column>
              <ui:Column width="11rem">
                <Label text="sell" />
                <ui:template>
                  <Text text="{recommendations>sell}" wrapping="false" />
                </ui:template>
              </ui:Column>
              <ui:Column width="11rem">
                <Label text="period" />
                <ui:template>
                  <Text text="{recommendations>period}" wrapping="false" />
                </ui:template>
              </ui:Column>
            </ui:columns>
          </ui:Table>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>